= form_for @task do |f|
  -if @task.errors.any?
    #error_explanation
      %h2= "#{pluralize(@task.errors.count, "error")} prohibited this task from being saved:"
      %ul
        - @task.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :name
    = f.text_field :name
  .field
    = f.label :description
    = f.text_field :description
  .field
    = f.label :status
    = f.text_field :status
  .field
    = f.label :done
    = f.check_box :done
  .field
    = f.label :project_id
    = f.text_field :project_id
  .actions
    = f.submit 'Save'
